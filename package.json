{
  "version": "0.1.0-alpha",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14",
    "yarn": ">= 1.22"
  },
  "scripts": {
    "start": "tsdx watch",
    "prebuild": "yarn test",
    "build": "yarn build:notest",
    "postbuild": "yarn writemeta",
    "build:notest": "tsdx build",
    "test:unit": "tsdx test --passWithNoTests",
    "test:lint": "tsdx lint src",
    "test:tsc": "tsc --noEmit",
    "test": "yarn test:tsc && yarn test:lint && yarn test:unit",
    "postinstall": "yarn prepare",
    "prepare": "tsdx build && husky install",
    "size": "size-limit",
    "writemeta": "yarn size --json | grep size\\\" | tail -1 | sed 's/.*\"size\": \\([0-9]*\\)\\,/\\1/' > ./docs/public/meta_pkgsize"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "name": "react-dumb-form",
  "author": "Denis Kabana <github.com/deniskabana>",
  "repository": "https://github.com/deniskabana/react-dumb-form",
  "module": "dist/react-dumb-form.esm.js",
  "size-limit": [
    {
      "path": "dist/react-dumb-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-dumb-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "husky": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  }
}
